# Lions Palette Forge - MCP Integration Environment Variables

# MCP Backend Configuration
VITE_MCP_HTTP_URL=http://localhost:3000
VITE_MCP_API_KEY=your-api-key-here

# PostgreSQL Database (for cloud deployment)
VITE_DATABASE_URL=postgresql://username:password@localhost:5432/mcp_database

# Development/Production Mode
VITE_NODE_ENV=development
VITE_USE_MOCK_API=false

# Claude Integration
VITE_CLAUDE_API_KEY=your-claude-api-key
VITE_CLAUDE_MODEL=claude-4-sonnet

# Authentication
VITE_AUTH_TOKEN_KEY=lions_palette_auth_token
VITE_USER_ID_KEY=lions_palette_user_id

# Real-time Features
VITE_ENABLE_WEBSOCKET=true
VITE_WEBSOCKET_URL=ws://localhost:3000/ws

# File Upload Limits
VITE_MAX_FILE_SIZE=500000000
VITE_ALLOWED_VIDEO_FORMATS=mp4,mov,avi,webm
VITE_ALLOWED_DOCUMENT_FORMATS=pdf,ppt,pptx,doc,docx

# Market Intelligence
VITE_ENABLE_MARKET_INTELLIGENCE=true
VITE_MARKET_DATA_API_URL=https://api.marketdata.com

# Logging & Monitoring
VITE_LOG_LEVEL=info
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=your-sentry-dsn

# Cloud Storage (for document uploads)
VITE_STORAGE_BUCKET=lions-palette-uploads
VITE_STORAGE_REGION=us-east-1
